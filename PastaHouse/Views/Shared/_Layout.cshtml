<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pasta House</title>

    @Styles.Render("~/Stylesheets/libraries")
    @Scripts.Render("~/Scripts/jquery")
    @Scripts.Render("~/Scripts/bootstrap")
    @Scripts.Render("~/Scripts/jqueryval")
    <script src="~/Scripts/_Layout.js"></script>
    <link href="~/Stylesheets/_Layout.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lato:100,300,300i,400" rel="stylesheet">
    @RenderSection("stylesheets", required: false)
</head>

<body>
    <div id="logo" onclick="location.href='@Url.Action("Index", "Home")'">PASTA HOUSE</div>
    @Html.Partial("_LoginPartial")
    <div class="close-container" onclick="navBtnAction(this);">
        <div class="bar1"></div>
        <div class="bar2"></div>
        <div class="bar3"></div>
    </div>

    <div class="body-content">
        @RenderBody()
    </div>

    <div class="overlay">
        <div class="overlay-content">
            @Html.ActionLink("Pasta House", "Index", "Home")
            @Html.ActionLink("O nas", "About", "Home")
            @Html.ActionLink("Menu", "Menu", "Home")
            @Html.ActionLink("Kontakt", "Contact", "Home")
            @Html.ActionLink("Rezerwacja", "Index", "Reservation")
        </div>
    </div>

    <!-- Delete footer from view when HideFooter ViewBag is true -->
    @if (ViewBag.HideFooter == null)
    {
        <div class="container-fluid footer">
            <ul class="social-links">
                <li><a href="#"><i class="ion-social-facebook"></i></a></li>
                <li><a href="#"><i class="ion-social-twitter"></i></a></li>
                <li><a href="#"><i class="ion-social-googleplus"></i></a></li>
                <li><a href="#"><i class="ion-social-instagram"></i></a></li>
            </ul>
        </div>
    }
</body>

@RenderSection("scripts", required: false)

</html>
